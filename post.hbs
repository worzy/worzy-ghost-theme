{{!< default}}

<header class="blog-head container">
    <div class="col12">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <i class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></i>
        <i class="blog-description">{{@blog.description}}</i>
    </div>
</header>

<main class="container" role="main">

    <article class="col12 {{post_class}}">

        {{#post}}

        <header>
        <h1 class="post-title">{{{title}}}</h1>
        <div class="post-meta"><i class="fa fa-clock-o"></i> <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
            {{#if tags}}<div class="post-meta tags">Tags: {{tags}}</div>{{/if}}
            {{#if author}}
            <section class="author">
                <img src="{{author.image}}" class="userimage" alt="{{author.name}}" />
                <p class="attr">Author</p>
                <h4><a href="{{author.website}}">{{author.name}}</a></h4>
                <p class="bio">{{author.bio}}</p>
                <div class="clear"></div>
            </section>
            {{/if}}
        </footer>

        {{/post}}
    
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'hellogareth'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

    </article>

</main>
